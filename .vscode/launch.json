{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Process (Attach)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "timeout": 30000,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist-electron/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Main Process (Launch)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--inspect=9229"
            ],
            "args": [
                "${workspaceFolder}/dist-electron/index.js"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist-electron/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "npm: build"
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": ["Debug Main Process (Attach)"],
            "preLaunchTask": "Start Vite Dev Server",
            "stopAll": true
        }
    ]
}