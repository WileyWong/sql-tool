{
  "name": "sql-tool",
  "version": "1.0.0",
  "description": "MySQL 数据库客户端工具",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "pack:win": "npm run build && electron-builder --win",
    "pack:mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "pinia": "^2.1.7",
    "element-plus": "^2.4.4",
    "monaco-editor": "^0.45.0",
    "mysql2": "^3.6.5",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "vite": "^5.0.10",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "typescript": "^5.3.3",
    "vue-tsc": "^1.8.27",
    "@types/node": "^20.10.6",
    "@types/crypto-js": "^4.2.1",
    "@types/uuid": "^9.0.7"
  },
  "build": {
    "appId": "com.sqltool.app",
    "productName": "SQL Tool",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": ["dmg"]
    }
  }
}
