{
  "name": "sql-tool",
  "version": "1.0.0",
  "description": "MySQL 数据库客户端工具",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "chcp 65001 && vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "pack:win": "npm run build && electron-builder --win",
    "pack:win:x64": "npm run build && electron-builder --win --x64",
    "pack:win:arm64": "npm run build && electron-builder --win --arm64",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:mac:x64": "npm run build && electron-builder --mac --x64",
    "pack:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "pack:linux": "npm run build && electron-builder --linux",
    "pack:linux:x64": "npm run build && electron-builder --linux --x64",
    "pack:linux:arm64": "npm run build && electron-builder --linux --arm64"
  },
  "dependencies": {
    "@tanstack/vue-virtual": "^3.13.18",
    "crypto-js": "^4.2.0",
    "element-plus": "^2.4.4",
    "exceljs": "^4.4.0",
    "fast-xml-parser": "^5.3.5",
    "mitt": "^3.0.1",
    "monaco-editor": "^0.45.0",
    "monaco-languageclient": "^8.1.1",
    "mssql": "^10.0.2",
    "mysql2": "^3.6.5",
    "node-sql-parser": "^5.4.0",
    "pinia": "^2.1.7",
    "sortablejs": "^1.15.6",
    "sql-formatter": "^15.3.0",
    "uuid": "^9.0.1",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^11.0.3",
    "@types/crypto-js": "^4.2.1",
    "@types/mssql": "^9.1.5",
    "@types/node": "^20.10.6",
    "@types/sortablejs": "^1.15.9",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-vue": "^4.5.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^3.2.2"
  },
  "build": {
    "appId": "com.sqltool.app",
    "productName": "SQL Tool",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
